{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "AWS_ACCOUNT_ID",
    "CDK_DEFAULT_ACCOUNT",
    "CDK_DEFAULT_REGION",
    "DATABASE_URL",
    "ENV",
    "NEXT_GOOGLE_MAPS_API_KEY",
    "NODE_ENV",
    "PORT",
    "POSTGRES_HOST",
    "POSTGRES_DB",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "VERCEL_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "cdk.out/**"
      ]
    },
    "install": {
      "dependsOn": [
        "build",
        "^install"
      ]
    },
    "deploy": {
      "cache": false,
      "dependsOn": [
        "build",
        "db:generate",
        "db:migrate",
        "^deploy"
      ]
    },
    "db:generate": {
      "dependsOn": [
        "^db:generate"
      ]
    },
    "db:migrate": {},
    "db:pull": {},
    "db:push": {},
    "db:studio": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    }
  }
}