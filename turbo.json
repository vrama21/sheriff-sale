{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["AWS_ACCOUNT_ID", "DATABASE_URL", "ENV", "NEXT_GOOGLE_MAPS_API_KEY", "NODE_ENV", "PORT", "VERCEL_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "cdk.out/**"]
    },
    "db:generate": {
      "dependsOn": ["^db:generate"]
    },
    "db:migrate:deploy": {},
    "db:push": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {}
  }
}
