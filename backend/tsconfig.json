{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@db": ["src/services/db"],
      "@types": ["src/types"],
      // "/opt/client": ["src/layers/prisma/client"]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    ".prettierrc.js",
    ".eslintrc.js",
    "jest.config.js",
    "dist",
    "scripts"
  ]
}
